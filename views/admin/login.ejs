<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="admin-body">
    <div class="admin-login">
        <div class="admin-login__card">
            <h1>⚡ ServerPlace Admin</h1>
            <form id="loginForm">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" class="input" placeholder="admin@serverplace.su" required>
                </div>
                <div class="form-group">
                    <label for="password">Пароль</label>
                    <input type="password" id="password" class="input" required>
                </div>
                <button type="submit" class="btn btn--primary btn--full">Войти</button>
                <p id="loginError" class="form-error" style="text-align:center;margin-top:1rem"></p>
            </form>
        </div>
    </div>
    <script>
        document.getElementById('loginForm').addEventListener('submit', function (e) {
            e.preventDefault();
            fetch('/api/admin/login', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    email: document.getElementById('email').value,
                    password: document.getElementById('password').value
                })
            }).then(r => r.json()).then(data => {
                if (data.success) window.location.href = '/admin';
                else document.getElementById('loginError').textContent = data.error;
            });
        });
    </script>
</body>

</html>